returnable integer factorial(n) -> f {
    
    if (n > 1) {
        call factorial((n - 1)) -> result;
        integer (n * result) -> f;
    } else {
        integer 1 -> f;
    }
    
    return f;

}

start {

    args 0 -> arg;
    integer arg -> N;

    call factorial(N) -> result;
    echo_nl result;

}
